{
	"name": "leme-writing-studio",
	"displayName": "LeME Writing Studio",
	"description": "This is an extension that supports writing your ebook.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:leme-writing-studio.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"when": "editorTextFocus && resourceExtname == .txt",
					"command": "leme-writing-studio.preview",
					"group": "leme-writing-studio@0"
				}
			]
		},
		"commands": [
			{
				"command": "leme-writing-studio.preview",
				"title": "LeME Preview"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}